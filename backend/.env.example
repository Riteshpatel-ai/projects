# Backend environment variables (example)
# Copy this file to `.env` and fill values. DO NOT commit real secrets.

# OpenAI
OPENAI_API_KEY=
EMBEDDING_MODEL=text-embedding-ada-002

# Gmail API
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=
GMAIL_REDIRECT_URI=http://localhost:5173/gmail-callback

# Database
# Use this connection string format for docker-compose: postgres://postgres:password@db:5432/postgres
DATABASE_URL=postgresql://postgres:password@db:5432/postgres

# JWT
SECRET_KEY=change-me-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# App
APP_NAME=MedMail Intelligence Platform
APP_VERSION=1.0.0
DEBUG=False
ALLOWED_ORIGINS=["http://localhost:5173"]

# Vector store
VECTOR_STORE_PATH=./vector_store

# Email processing
MAX_EMAILS_PER_FETCH=100
EMAIL_BATCH_SIZE=10
